extends layout

block content
  h1= title
  h2 Welcome to #{title}
  p
  form(id='file-uploader' action="/fileUpload" class='dropzone dz-clickable' enctype='multipart/form-data' method="post")
    div(class ='fallback')
      input(name='file' type='file')

  form(action="/sendEmail" method='post' style={margin: '20px 0px 5px 80px'})
    table
      tbody
        tr
          td
            | From:
          td
            input(type="text" name="from" style={margin: '5px 5px'})
        tr
          td
            | To:
          td
            input(type="text" name="to" style={margin: '5px 5px'})
        tr
          td
            | Message:
          td
            textarea(rows="5" cols="40" name="message" style={margin: '5px 5px'})


    input(class='button' type="submit" value="Send Email")
